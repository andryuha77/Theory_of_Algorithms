#lang racket

(define (oddNum n)
  (+ (* 3 n) 1)
 )

(define (even n)
  (/ n 2)
 )

(define list '())

(define (collatzlist n)
  (append list n)
  (if (<= n 1)
      list
      (if (oddNum? n)
          (cons n (collatzlist (oddNum n)))
          (cons n (collatzlist (even n))))))

(oddNum 4)

(even 4)
(collatzlist 6)
